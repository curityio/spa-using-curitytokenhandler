_format_version: '2.1'
_transform: true

services:

#
# The SPA makes static content requests using this host name
#
- name: web-host
  url: http://webhost:3001
  routes:
  - name: web-host-route
    hosts:
    - www.product.example
    paths:
    - /

#
# The SPA makes front channel requests using this host name
#
- name: authorization-server
  url: http://login-internal:8080
  routes:
  - name: authorization-server-route
    hosts:
    - login.example.com
    paths:
    - /

#
# The SPA calls its backend for frontend using this hostname and path
#
- name: oauth-agent
  url: http://bff-internal:8443/oauthagent/example
  routes:
  - name: oauth-agent-route
    hosts:
    - bff.product.example
    paths:
    - /oauthagent/example

#
# The SPA makes API requests using this hostname and path
#
- name: example-api
  url: http://api-internal:3001
  routes:
  - name: example-api-route
    hosts:
    - bff.product.example
    paths:
    - /api
  plugins:
  - name: cors
    config:
      origins:
      - http://www.product.example
      credentials: true
      max_age: 86400
  - name: oauth-proxy
    config:
      cookie_key: "$TH_COOKIE_KEY"
      cookie_key_pass: $TH_COOKIE_KEY_PASS

#
# The SPA gets OAuth user info using this hostname and path
#
- name: oauthuserinfo
  url: http://login-internal:8080/realms/example/protocol/openid-connect/userinfo
  routes:
  - name: oauth-userinfo-route
    hosts:
    - bff.product.example
    paths:
    - /oauthuserinfo
  plugins:
  - name: cors
    config:
      origins:
      - http://www.product.example
      credentials: true
      max_age: 86400
  - name: oauth-proxy
    config:
      cookie_key: "$TH_COOKIE_KEY"
      cookie_key_pass: $TH_COOKIE_KEY_PASS
